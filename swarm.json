{
	"name": "slack-ircbridge",
	"components": {
        "slack-ircbridge": {
            "image": "giantswarm/slack-ircbridge",
            "args": [
                "$NICKNAME",
                "$SERVER",
                "$TOKEN",
                "$SLACK_CHANNEL",
                "$IRC_CHANNEL"
            ],
            "volumes": [{
                "path": "/slack-irc/",
                "size": "1 GB"
            }]
        }
	}
}
